FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
wallDist
{
method meshWave;
}

ddtSchemes
{
    default         CrankNicolson 0.5;
}

gradSchemes
{
    default         leastSquares;
    //default         Gauss linear;
    //grad(p)         Gauss linear;
    //grad(U)         Gauss linear;
    grad(U)         cellLimited leastSquares 1;
    grad(p)         cellLimited leastSquares 1;
}

divSchemes
{	//First order.
     default         none;
    div(phi,U)      Gauss linearUpwind grad(U); // Was Gauss linearUpwind grad(U)
    div(phi,k)      Gauss upwind; // Was Gauss limitedLinear 1
    div(phi,omega)  Gauss upwind; // Was Gauss limitedLinear 1
    div((nuEff*dev2(T(grad(U))))) Gauss linear;
}

laplacianSchemes
{
    default         Gauss linear limited corrected 0.33;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         limited corrected 0.33;
}

fluxRequired
{
    default         no;
    pcorr           ;
    p               ;
}


